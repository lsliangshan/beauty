/**index.wxss**/
.container {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #67b8b8;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.avatar-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 150rpx;
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}

.score-text {
  font-size: 48rpx;
  font-weight: 200;
}
